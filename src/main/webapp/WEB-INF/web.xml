<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>signup</display-name>
  <servlet>
  	<servlet-name>CustomerRegistrationServlet</servlet-name>
  	<display-name>CustomerRegistrationServlet</display-name>
  	<description></description>
  	<servlet-class>com.codewithevo.gocheetaweb.controller.CustomerRegistrationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CustomerLoginServlet</servlet-name>
  	<display-name>CustomerLoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.codewithevo.gocheetaweb.controller.CustomerLoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<display-name>Logout</display-name>
  	<description></description>
  	<servlet-class>com.codewithevo.gocheetaweb.controller.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CustomerRegistrationServlet</servlet-name>
  	<url-pattern>/CustomerRegistrationServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CustomerLoginServlet</servlet-name>
  	<url-pattern>/CustomerLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
